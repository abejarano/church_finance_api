{
  "name": "church_financial_api",
  "version": "0.0.1",
  "description": "API Church Financial System",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "test": "jest --forceExit --runInBand --detectOpenHandles",
    "start:prod": "node dist/app.js",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" ",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "author": "angel bejarano / angel.bejarano@jaspesoft.com",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jaspesoft/church_financial_api.git"
  },
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/rate-limit": "^9.1.0",
    "@google-cloud/pubsub": "^4.1.1",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "node-input-validator": "^4.5.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@faker-js/faker": "^8.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/pino": "^7.0.5",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-auto-mock": "^3.7.2",
    "ts-jest": "^29.1.1",
    "ts-patch": "^3.1.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "setupFiles": [
      "./test/jest/config.ts"
    ],
    "testTimeout": 90000,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1",
      "^test/(.*)": "<rootDir>/../test/$1"
    },
    "testRegex": ".test.ts$"
  }
}
