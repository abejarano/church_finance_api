{
  "name": "church_financial_api",
  "version": "0.1.5",
  "description": "API Church Financial System",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "test": "jest --forceExit --runInBand --detectOpenHandles",
    "test:business": "node -r ts-node/register -r tsconfig-paths/register src/tests/accounts-payable-taxes.test.ts",
    "start:prod": "node -r tsconfig-paths/register dist/app.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias && npm run copy-static-assets",
    "format": "prettier --write \"src/**/*.{ts,hbs}\" ",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "copy-static-assets": "ts-node src/copyStaticAssets.ts"
  },
  "author": "angel bejarano / angel.bejarano@jaspesoft.com",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jaspesoft/church_financial_api.git"
  },
  "license": "ISC",
  "dependencies": {
    "@abejarano/ts-express-server": "^1.3.0",
    "@abejarano/ts-mongodb-criteria": "^1.1.0",
    "@bull-board/express": "^6.5.4",
    "@google-cloud/logging": "^11.2.0",
    "@google-cloud/pubsub": "^4.3.3",
    "@google-cloud/storage": "^7.14.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express-basic-auth": "^1.2.1",
    "handlebars": "^4.7.8",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.13.0",
    "node-cron": "^3.0.3",
    "node-input-validator": "^4.5.1",
    "nodemailer": "^6.10.0",
    "nodemailer-express-handlebars": "^7.0.0",
    "pino": "^10.0.0",
    "pino-pretty": "^11.0.0",
    "puppeteer": "^24.8.0",
    "shelljs": "^0.9.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/express-fileupload": "^1.5.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.13",
    "typescript": "^5.8.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "node_modules/",
      "dist/",
      "*.log",
      ".git/",
      ".idea/",
      "*.tmp",
      "*.temp"
    ]
  }
}