{
  "name": "church_financial_api",
  "version": "0.0.1",
  "description": "API Church Financial System",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "test": "jest --forceExit --runInBand --detectOpenHandles",
    "start:prod": "node dist/app.js",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" ",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "author": "angel bejarano / angel.bejarano@jaspesoft.com",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jaspesoft/church_financial_api.git"
  },
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@aws-sdk/s3-request-presigner": "^3.717.0",
    "@google-cloud/pubsub": "^4.3.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "node-input-validator": "^4.5.1",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-fileupload": "^1.5.1",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/pino": "^7.0.5",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-auto-mock": "^3.7.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.2",
    "typescript": "^5.4.3"
  },
  "jest": {
    "setupFiles": [
      "./test/jest/config.ts"
    ],
    "testTimeout": 90000,
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1",
      "^test/(.*)": "<rootDir>/../test/$1"
    },
    "testRegex": ".test.ts$"
  }
}
